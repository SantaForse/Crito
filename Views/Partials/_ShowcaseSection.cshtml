@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models



<div class="showcase-image-part">
    <div class="showcase-img-grid-item showcase-text">
        <h1>@Model.Value("showcaseTitle")</h1>
        <h5>@Model.Value("showcaseDescription")</h5>
        <div class="showcase-buttons">
            <a class="showcase-button-yellow" href="@Model.Value("showcaseButtonUrl")">@Model.Value("showcaseButtonText") <i class="fa-solid fa-arrow-up-right"></i></a>
            <a class="showcase-button-trans" href="/service">Learn More <i class="fa-solid fa-arrow-up-right"></i></a>
        </div>

    </div>
    <div class="showcase-img-grid-item img-showcase">

    @{
        var showcaseImage = Model.Value<MediaWithCrops>("showcaseImage");
        if (showcaseImage != null)
        {
            <img src="@showcaseImage.MediaUrl()" alt="@Model.Value("showcaseTitle")">
        }
    }
        
    </div>
</div>